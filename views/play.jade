extends layout

block content
  h1= title
  p This is your game.
  input(placeholder="who are you?" id="checkin")
  button(type="button" class="submit")
  script.
    var io = io.connect();
    io.emit('start');
    io.on('hahaha', function(){
      $('body').prepend('<p>i love to sing</p>');
    });
    //- var name = $('input#checkin').val();
    $('button').click(function() {
      io.emit('check');
    });
    io.on('new visitor', function(data) {
      $('body').append('<p> Love: '+ data.love + '</p>')
    });
  
